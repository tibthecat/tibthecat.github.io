---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")) || [];
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = sortedPosts.slice(0, 3);


const projects = (await getCollection("projects")) || [];
const sortedProjects = projects.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_Projects = sortedProjects.slice(0, 3);


---


<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    
    <!-- Hybrid approach: Tailwind + custom classes -->
    <div class="text-xl py-1 text-base-content/70">
      Hey ðŸ‘‹
    </div>
    
    <!-- Custom gradient with Tailwind sizing/spacing -->
    <div class="text-3xl md:text-4xl font-bold py-2 gradient-text 
                hover:scale-105 transform transition-transform duration-300">
      I'm Tibthecat
    </div>


    
    <!-- Rest of your content using mostly Tailwind -->
    <div class="text-3xl py-3 font-semibold">
      <span class="text-base-content">Blockchain Engineer</span>
    </div>

    <div class="py-4 max-w-3xl">
      <p class="text-lg leading-relaxed text-base-content/80">
        In another life, I built 
        <span class="text-accent font-semibold px-2 py-1 bg-accent/10 rounded-md">
          3D engines
        </span> 
        and worked in gaming, but these days I'm all about 
        <span class="text-primary font-semibold px-2 py-1 bg-primary/10 rounded-md">
          Blockchain, DeFi,
        </span> 
        digital freedomâ€¦ and AI.
      </p>
      
      <p class="text-lg leading-relaxed text-base-content font-medium mt-4 
               border-l-4 border-accent pl-4 italic">
        I like creating things that matter and breaking them when they don't.
      </p>
    </div>


    <!-- Buttons with Tailwind + custom glow -->
    <div class="mt-8 flex flex-wrap gap-4">
      <a href="/projects" 
         class="btn btn-outline btn-lg glow-hover
                hover:scale-110 transform transition-all duration-300">
        View My Work
      </a>
      
      <a href="/cv" 
         class="btn btn-outline btn-lg glow-hover
                hover:scale-110 transform transition-all duration-300">
        My Resume
      </a>
    </div>
  </div>

  <!-- Projects section -->
  <div class="mt-16">
    <div class="text-3xl font-bold mb-8 gradient-text flex items-center">
      My Latest Projects
    </div>
  </div>

 {
    last_Projects.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/projects/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }

