---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5 gradient-text">What can I do for you?</div>
  </div>

  <HorizontalCard
    title="Dev"
    img="/dev_services.webp"
    desc="Develop and deploy smart contracts according to your needs."
    url="/services/dev"
    target="_self"  
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Audit"
    img="/audit_services.webp"
    desc="Audit your smart contracts and make sure they are secure and optimized."
    url="/services/audit"
    target="_self"  
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Consulting"
    img="/consulting_services.webp"
    desc="Offer expertise and guidance on smart contract development and security for your project."
    url="/services/consulting"
    target="_self"
  />
  <div class="divider my-0"></div>

</BaseLayout>
